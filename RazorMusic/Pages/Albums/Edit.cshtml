@page "{id:int?}"
@model RazorMusic.Pages.Albums.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Album.ID" />
            <div class="form-group">
                <label asp-for="Album.Title" class="control-label"></label>
                <input asp-for="Album.Title" class="form-control" />
                <span asp-validation-for="Album.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Artist" class="control-label"></label>
                <input asp-for="Album.Artist" class="form-control" />
                <span asp-validation-for="Album.Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.ReleaseYear" class="control-label"></label>
                <input asp-for="Album.ReleaseYear" class="form-control" />
                <span asp-validation-for="Album.ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Genre" class="control-label"></label>
                <input asp-for="Album.Genre" class="form-control" />
                <span asp-validation-for="Album.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.ImageUrl" class="control-label"></label>
                <input asp-for="Album.ImageUrl" class="form-control" />
                <span asp-validation-for="Album.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Ranking" class="control-label"></label>
                <input asp-for="Album.Ranking" class="form-control" />
                <span asp-validation-for="Album.Ranking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@*
    The "{id:int?}" route template changes the id parameter from a query to part of the url path
*@